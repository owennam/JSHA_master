# 프로덕션용 (실제 키로 교체 필요)
# VITE_TOSS_CLIENT_KEY=your_production_client_key
# VITE_TOSS_SECRET_KEY=your_production_secret_key

# Customer Key 설정
# 회원: 고유한 UUID 사용
# 비회원: "ANONYMOUS" 사용
VITE_TOSS_CUSTOMER_KEY=ANONYMOUS

# Server Configuration
SERVER_PORT=3001
VITE_CLIENT_PORT=5173

# Backend Server URL (프론트엔드가 백엔드에 연결할 URL)
# 로컬 개발: http://localhost:3001
# 프로덕션: https://your-backend-server.onrender.com
VITE_SERVER_URL=http://localhost:3001

# Google Sheets API
GOOGLE_SHEETS_ID=your_google_sheets_id_here
GOOGLE_SHEET_NAME=주문데이터

# Email Service Configuration (Resend - 클라우드 친화적, 권장)
# Resend API Key: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
# Verified domain email (예: noreply@yourdomain.com) 또는 기본값 onboarding@resend.dev
RESEND_FROM_EMAIL=onboarding@resend.dev
ADMIN_EMAIL=admin_email@example.com

# SOLAPI SMS Service Configuration
# https://solapi.com 에서 API Key 발급
SOLAPI_API_KEY=your_solapi_api_key_here
SOLAPI_API_SECRET=your_solapi_api_secret_here
SOLAPI_FROM_NUMBER=01012345678
ADMIN_PHONE=01012345678

# Firebase Configuration
# https://console.firebase.google.com 에서 프로젝트 설정 > 일반 > 내 앱에서 확인
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
VITE_FIREBASE_APP_ID=1:your_app_id_here
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
